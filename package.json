{
  "name": "c-3po-cli",
  "version": "0.0.3",
  "main": "index.js",
  "repository": "git@github.com:c-3po-org/c-3po-cli.git",
  "author": "",
  "license": "MIT",
  "scripts": {
    "test": "jest",
    "cli": "ts-node ./src/index.ts",
    "build": "tsc",
    "prepublish": "in-publish && yarn test && tsc",
    "upgrade": "yarn upgrade-interactive",
    "pretty": "prettier --write \"./src/**/*.ts\" \"./tests/**/*.ts\"",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.{ts,css,tsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "bin": {
    "c-3po": "./bin/c-3po"
  },
  "devDependencies": {
    "@types/babel-core": "6.25.3",
    "@types/jest": "21.1.6",
    "@types/node": "8.0.53",
    "@types/yargs": "8.0.2",
    "husky": "^0.14.3",
    "in-publish": "^2.0.0",
    "jest": "21.2.1",
    "lint-staged": "^5.0.0",
    "prettier": "1.8.2",
    "ts-jest": "21.2.2",
    "ts-node": "3.3.0",
    "typescript": "2.6.1"
  },
  "dependencies": {
    "babel-core": "6.26.0",
    "babel-plugin-c-3po": "0.7.0",
    "walk": "2.3.9",
    "yargs": "10.0.3"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/tests/.*|(\\.|/)(test|spec))\\.(tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  }
}
